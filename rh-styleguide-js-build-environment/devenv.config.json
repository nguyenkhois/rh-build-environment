{
    "name": "styleguidejs-devenv",
    "description": "The config file is using for the local front-end development environment",
    "localServer": {
        "port": 3060,
        "staticExtensions": ["html"]
    },
    "codeBase": [ "src/**/*.{html,js,json}" ],
    "development": {
        "devPath": "src",
        "cssDevPath": "src/_dev/css",
        "scssDevPath": ["src/_dev/scss/*.scss"],
        "jsDevPath": ["src/_dev/js/*.js"],
        "htmlDevPath": "src/*.html"
    },
    "production": {
        "bundleName": "bundle",
        "publicPath": "public",
        "jsPublicPath": "public/scripts",
        "cssPublicPath": "public/styles",
        "neededDirectories": ["src/app/**/*", "src/styleguide/**/*", "src/images/**/*"]
    }
}
